<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/card_id"
        android:layout_width="369dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_name" />

    <TextView
        android:id="@+id/card_balance"
        android:layout_width="183dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toEndOf="@+id/card_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_name"
        android:layout_width="166dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="412dp"
        android:layout_height="578dp"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_id"
        app:layout_constraintVertical_bias="0.161">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/shape_history_wrapper"
                android:visibility="gone"
                />

            <include
                android:id="@+id/history_1"
                layout="@layout/fragment_history"
                android:visibility="gone"
                />


            <include
                android:id="@+id/history_2"
                layout="@layout/fragment_history"
                android:visibility="gone"
                />


            <include
                android:id="@+id/history_3"
                layout="@layout/fragment_history"
                android:visibility="gone"
                />


            <include
                android:id="@+id/history_4"
                layout="@layout/fragment_history"
                android:visibility="gone"
                />


            <include
                android:id="@+id/history_5"
                layout="@layout/fragment_history"
                android:visibility="gone"
                />


            <include
                android:id="@+id/history_6"
                layout="@layout/fragment_history"
                android:visibility="gone"
                />


            <include
                android:id="@+id/history_7"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_8"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_9"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_10"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_11"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_12"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_13"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_14"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_15"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_16"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_17"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_18"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_19"
                layout="@layout/fragment_history"
                android:visibility="gone" />


            <include
                android:id="@+id/history_20"
                layout="@layout/fragment_history"
                android:visibility="gone" />

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>