<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"

    android:paddingStart="5dp"
    >

    <ImageView
        android:id="@+id/card_sum_image"
        android:layout_width="113dp"
        android:layout_height="88dp"
        android:layout_below="@+id/line"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/shape_ayuca"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/card_sum_balance"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_sum_type"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/card_sum_image"
        android:text="残高：￥54,389 / 2456.2P"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/last_read"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_sum_balance"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/card_sum_image"
        android:text="最終読み取り：12/10 12:56"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/card_sum_type"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/card_sum_image"
        android:text="Ayuca"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="Line"
        android:src="@drawable/shape_history_wrapper" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_clear_24" />

</RelativeLayout>
