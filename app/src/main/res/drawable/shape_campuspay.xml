<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:id="@+id/shape_card_summary">
    <stroke
        android:width="0.1dp"
        android:color="@color/gray"
        />
    <corners
        android:radius="30dp"
        />
<size
    android:width="450dp"
    android:height="300dp"/>
    <padding
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        />

    <gradient
        android:angle="135"
        android:centerX="0"
        android:centerY="0"
        android:centerColor="@color/gray"
        android:endColor="@color/white"
        />
</shape>